rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isOwnerOfWorkspace(workspaceId) {
      let path = /databases/$(database)/documents/workspaces/$(workspaceId);
      return isSignedIn() && exists(path) && get(path).data.get('ownerId', '') == request.auth.uid;
    }

    function isWorkspaceMember(workspaceId) {
      let path = /databases/$(database)/documents/workspaces/$(workspaceId);
      return isSignedIn() && exists(path) && (
        get(path).data.get('ownerId', '') == request.auth.uid
        || request.auth.uid in get(path).data.get('memberIds', [])
      );
    }

    function isTaskAssignee(task) {
      let assignees = task.data.get('assignees', {});
      return assignees != null && (
        assignees.get('ownerId', '') == request.auth.uid
        || request.auth.uid in assignees.get('watcherIds', [])
      );
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    match /workspaces/{workspaceId} {
      allow read: if isSignedIn() && (
        resource.data.get('ownerId', '') == request.auth.uid
        || request.auth.uid in resource.data.get('memberIds', [])
      );
      allow create: if isSignedIn() && request.resource.data.get('ownerId', '') == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.get('ownerId', '') == request.auth.uid;

      match /members/{memberId} {
        allow read: if isWorkspaceMember(workspaceId);
        allow create: if isSignedIn() && memberId == request.auth.uid;
        allow update, delete: if isSignedIn() && isOwnerOfWorkspace(workspaceId);
      }
    }

    match /invitations/{invitationId} {
      allow read: if isSignedIn() && (
        request.auth.token.email.lower() == resource.data.invitedEmail
        || isOwnerOfWorkspace(resource.data.workspaceId)
      );
      allow create: if isSignedIn() && isWorkspaceMember(request.resource.data.workspaceId);
      allow update: if isSignedIn() && (
        request.auth.token.email.lower() == resource.data.invitedEmail
        || isOwnerOfWorkspace(resource.data.workspaceId)
      );
      allow delete: if isSignedIn() && isOwnerOfWorkspace(resource.data.workspaceId);
    }

    match /notifications/{notificationId} {
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn(); // Allow app to create notifications for others
    }

    match /projects/{projectId} {
      allow read, write: if isSignedIn() && isWorkspaceMember(resource.data.workspaceId);
      allow create: if isSignedIn() && isWorkspaceMember(request.resource.data.workspaceId);
    }

    match /tasks/{taskId} {
      allow read: if isSignedIn() && (
        isWorkspaceMember(resource.data.workspaceId)
        || isTaskAssignee(resource)
      );
      allow create: if isSignedIn() && isWorkspaceMember(request.resource.data.workspaceId);
      allow update: if isSignedIn() && (
        isWorkspaceMember(resource.data.workspaceId)
        || isTaskAssignee(resource)
      );
      allow delete: if isSignedIn() && isWorkspaceMember(resource.data.workspaceId);
    }

    match /tasks/{taskId}/comments/{commentId} {
      allow read: if isSignedIn() && isWorkspaceMember(get(/databases/$(database)/documents/tasks/$(taskId)).data.workspaceId);
      allow create: if isSignedIn() && isWorkspaceMember(get(/databases/$(database)/documents/tasks/$(taskId)).data.workspaceId);
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /tasks/{taskId}/activity/{activityId} {
      allow read: if isSignedIn() && isWorkspaceMember(get(/databases/$(database)/documents/tasks/$(taskId)).data.workspaceId);
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    match /task_dependencies/{depId} {
      allow read, write: if isSignedIn();
    }
  }
}
